<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_margin="4dp">
        
        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="120dp"
            android:layout_height="72dp"
            android:padding="2dp"/>
        <RelativeLayout
            android:id="@+id/CourseTitleLayout"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/ImageView">
            <TextView
                android:id="@+id/CourseTitleText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Title 1"
                android:textSize= "16sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:ellipsize="end"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:maxLines="2"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_toRightOf="@+id/CourseTitleLayout">
            <TextView
                android:id="@+id/CompanyText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="OrganizationText"
                android:textSize="9sp"
                android:ellipsize="end"
                android:maxLines="3"/>

            <TextView
                android:id="@+id/DatePostedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CompanyText"
                android:layout_alignParentRight="true"
                android:text="ModeText"
                android:textSize="8sp"/>

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>